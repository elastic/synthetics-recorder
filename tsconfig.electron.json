{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "outDir": "out"
  },
  "include": ["electron/**/*"]
}
