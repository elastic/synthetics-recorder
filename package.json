{
  "name": "synthetics-recorder",
  "version": "0.0.1-alpha.1",
  "description": "Record synthetics user journey flow of a website",
  "repository": "https://github.com/elastic/synthetics-recorder",
  "scripts": {
    "install:pw": "node scripts/install-pw.js",
    "postinstall": "npm run install:pw && electron-builder install-app-deps",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "electron:copy": "cp -r ./electron/. ./build",
    "dev": "concurrently -k \"BROWSER=none npm run react:start\" \"wait-on tcp:3000 && electron electron/electron.js\"",
    "build": "npm run clean && npm run react:build && npm run electron:copy",
    "pack": "npm run build && electron-builder",
    "release": "npm run build && electron-builder -mwl --publish=always",
    "clean": "rm -rf ./build && rm -rf ./dist",
    "lint": "eslint .",
    "lint-ci": "eslint -f ./node_modules/eslint-junit/index.js .",
    "test": "jest"
  },
  "author": {
    "name": "Elastic Synthetics Team",
    "email": "synthrum@elastic.co"
  },
  "keywords": [
    "synthetics",
    "recorder",
    "elastic",
    "playwright"
  ],
  "license": "MIT",
  "main": "build/electron.js",
  "homepage": "./",
  "build": {
    "productName": "Elastic Synthetics Recorder",
    "appId": "com.elastic.synthetics-recorder",
    "files": [
      "build/**/*",
      "scripts/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      "local-browsers/**/*"
    ],
    "extends": null,
    "publish": {
      "provider": "github"
    },
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "mac": {
      "icon": "public/elastic.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/elastic.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/elastic.png",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/react-dom": "^17.0.10",
    "concurrently": "^6.2.0",
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-junit": "^1.0.1",
    "jest": "^26.6.0",
    "react-scripts": "^4.0.3",
    "ts-jest": "^26.5.6",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "@elastic/datemath": "^5.0.3",
    "@elastic/eui": "^37.0.0",
    "@elastic/synthetics": "=1.0.0-beta.16",
    "dotenv": "^10.0.0",
    "electron-better-ipc": "^2.0.1",
    "electron-debug": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.1",
    "electron-unhandled": "^3.0.2",
    "moment": "^2.29.1",
    "playwright": "git+https://github.com/vigneshshanmugam/playwright.git#separate-recorder",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "browserslist": [
    "last 1 version"
  ],
  "eslintConfig": {
    "env": {
      "es2021": true
    },
    "extends": [
      "react-app",
      "plugin:react/recommended"
    ],
    "ignorePatterns": ["build", "local-browsers"],
    "overrides": [
      {
        "extends": [
          "eslint:recommended"
        ],
        "files": [
          "*.js",
          "*.jsx"
        ]
      },
      {
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/eslint-recommended"
        ],
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "plugins": [
          "@typescript-eslint"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": 0,
          "@typescript-eslint/no-non-null-assertion": 0
        }
      }
    ],
    "rules": {
      "default-case": 0
    }
  },
  "eslint-junit": {
    "suiteName": "eslint tests",
    "output": "./eslint-junit.xml",
    "classNameTemplate": "{ruleId}",
    "titleTemplate": "{line} : {source}"
  },
  "engines": {
    "node": ">14.14.0",
    "npm": "6"
  }
}
