{
  "name": "synthetics-recorder",
  "version": "0.0.1",
  "description": "Record synthetics user journey flow of a website",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "electron:copy": "cp -r ./electron/. ./build",
    "dev": "concurrently -k \"BROWSER=none npm run react:start\" \"wait-on tcp:3000 && electron electron/electron.js\"",
    "pack": "electron-builder",
    "build": "npm run react:build && npm run electron:copy && npm run pack",
    "release": "npm run react:build && npm run electron:copy && electron-builder --publish=always",
    "clean": "rm -rf ./build && rm -rf ./dist"
  },
  "keywords": [
    "synthetics",
    "recorder",
    "elastic",
    "playwright"
  ],
  "author": "Vignesh Shanmugam <vignesh.shanmugam22@gmail.com> (https://vigneshh.in)",
  "license": "MIT",
  "main": "build/electron.js",
  "homepage": "./",
  "build": {
    "productName": "Elastic Synthetics Recorder",
    "appId": "com.elastic.synthetics-recorder",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github"
    },
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "mac": {
      "icon": "public/elastic.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/elastic.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/elastic.png"
    }
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "electron": "^13.1.0",
    "electron-builder": "^22.11.1",
    "react-scripts": "^4.0.3",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "@elastic/datemath": "^5.0.3",
    "@elastic/eui": "^37.0.0",
    "@elastic/synthetics": "^1.0.0-beta.13",
    "electron-better-ipc": "^2.0.1",
    "electron-debug": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-timber": "^0.5.1",
    "electron-unhandled": "^3.0.2",
    "moment": "^2.29.1",
    "playwright": "git+https://github.com/vigneshshanmugam/playwright.git#separate-recorder",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "update-electron-app": "^2.0.1"
  },
  "browserslist": [
    "last 1 version"
  ]
}
