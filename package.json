{
  "name": "synthetics-recorder",
  "version": "0.0.1-alpha.2",
  "description": "Record synthetics user journey flow of a website",
  "repository": "https://github.com/elastic/synthetics-recorder",
  "scripts": {
    "install:pw": "node scripts/install-pw.js",
    "preinstall": "npx npm-force-resolutions@0.0.10",
    "postinstall": "npm run install:pw && electron-builder install-app-deps && npm run prepare-demo-app && tsc",
    "prepare-demo-app": "npm install --prefix demo-app && npm run build --prefix demo-app",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "electron:copy": "cp -r ./electron/. ./build",
    "dev": "concurrently -k \"BROWSER=none npm run react:start\" \"tsc -w\" \"wait-on tcp:3000 && nodemon --exec electron build/electron/electron.js\"",
    "build": "npm run clean && npm run react:build && tsc",
    "pack": "npm run build && electron-builder",
    "release": "npm run build && electron-builder -mwl --publish=always",
    "clean": "rm -rf ./build && rm -rf ./dist",
    "lint": "eslint .",
    "format": "prettier --write .",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --config ./jest.unit.config.js ./src",
    "test:unit:watch": "npm run test:unit -- --coverage --watch",
    "test:e2e": "jest --runInBand --config ./jest.e2e.config.js ./e2e/tests",
    "test:e2e:server": "BROWSER=NONE PORT=61337 react-scripts start",
    "test:e2e:runner": "IS_RUNNER=true TEST_PORT=61337 jest --config ./jest.e2e.config.js ./e2e/tests",
    "update-demo-app": "git subtree pull --prefix demo-app git@github.com:vigneshshanmugam/synthetics-ecommerce-demo.git main --squash"
  },
  "author": {
    "name": "Elastic Synthetics Team",
    "email": "synthrum@elastic.co"
  },
  "keywords": [
    "synthetics",
    "recorder",
    "elastic",
    "playwright"
  ],
  "license": "MIT",
  "main": "build/electron/electron.js",
  "homepage": "./",
  "build": {
    "productName": "Elastic-Synthetics-Recorder",
    "appId": "co.elastic.synthetics-recorder",
    "files": [
      "build/**/*",
      "scripts/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      "local-browsers/**/*"
    ],
    "extends": null,
    "publish": {
      "provider": "github"
    },
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "mac": {
      "icon": "public/elastic.png",
      "category": "public.app-category.developer-tools "
    },
    "protocols": {
      "name": "elastic-synthetics-recorder",
      "schemes": [
        "elastic-synthetics-recorder"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "public/elastic.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/elastic.png",
      "category": "Utility"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.4",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.1",
    "@types/react-dom": "^17.0.14",
    "@types/styled-components": "^5.1.24",
    "ajv": "^8.11.0",
    "concurrently": "^7.0.0",
    "electron": "^14.2.4",
    "electron-builder": "^23.0.2",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "react-scripts": "5.0.0",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@elastic/datemath": "^5.0.3",
    "@elastic/eui": "^52.1.0",
    "@elastic/synthetics": "=1.0.0-beta.23",
    "@emotion/cache": "^11.7.1",
    "@emotion/react": "^11.8.2",
    "dotenv": "^10.0.0",
    "electron-better-ipc": "^2.0.1",
    "electron-debug": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.6",
    "electron-unhandled": "^3.0.2",
    "moment": "^2.29.1",
    "playwright": "git+https://github.com/elastic/playwright.git#separate-recorder",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.3.5"
  },
  "resolutions": {
    "trim": "0.0.3"
  },
  "browserslist": [
    "last 1 version"
  ],
  "engines": {
    "node": ">14.14.0",
    "npm": "6"
  }
}
